<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_app_2"
    tools:context=".DietaOmnivora">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="306dp"
        android:layout_height="443dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxPescado"
                android:layout_width="17dp"
                android:layout_height="43dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="94dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pez" />

            <Spinner
                android:id="@+id/spinnerPescado"
                android:layout_width="151dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxPollo"
                android:layout_width="17dp"
                android:layout_height="43dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="94dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pollo" />

            <Spinner
                android:id="@+id/spinnerPollo"
                android:layout_width="151dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxCerdo"
                android:layout_width="17dp"
                android:layout_height="43dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="94dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cerdo" />

            <Spinner
                android:id="@+id/spinnerCerdo"
                android:layout_width="151dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxTernera"
                android:layout_width="17dp"
                android:layout_height="43dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="94dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ternera" />

            <Spinner
                android:id="@+id/spinnerTernera"
                android:layout_width="151dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="346dp"
        android:layout_height="108dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Selecciona el tipo de carne que consumes y la frecuencia"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/button5"
        android:layout_width="75dp"
        android:layout_height="88dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/boton_continuar"
        android:onClick="continuar"
        android:text="    "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>